<div class="new-channel">
  Add a new channel:
  <%= form_for Channel.new do |f| %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_field :description %>
    </div>
    <div class="field">
      <%= f.radio_button :privacy, 'open', :checked => true %><%= f.label 'Open' %>
      <%= f.radio_button :privacy, 'closed' %><%= f.label 'Closed' %>
      <%= f.radio_button :privacy, 'private' %><%= f.label 'Private' %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>

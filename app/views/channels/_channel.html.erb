<div class="channel">
  <div class="channel-name">CHANNEL NAME: <%= link_to channel.name, channel %></div>
  <div class="channel-privacyi">This channel is: <%= channel.privacy %></div>
  <% if user_signed_in? && current_user.id == @channel.user_id %>
    <%= render 'privacyform' %>
  <% end %>
  <div class="channel-author">MADE BY: 
    <%= link_to channel.user.username, channel.user %></div>
  <div class="channel-description">DESCRIPTION: <%= channel.description %></div>

  <p />
  <div class="posts">
  	<%= render channel.posts.order("created_at DESC") %>
  </div>
<% if user_signed_in? && @postable %>
  <%= render 'posts/form' %>
<% else %>
  <%= link_to "Sign in", new_user_session_path %> to add a post!
<% end %>
</div>

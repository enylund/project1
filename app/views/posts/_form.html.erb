<div class="new-post">
  MAKE NEW POST:
  <% @post = Post.new %>
  <%= form_for(@post, :url => posts_path, :html => { :multipart => true }) do |f| %>

    <div class="field">
      <%= f.label :img_url %><br>
      <%= f.text_field :img_url %>
    </div>
    <div class="field">
      <%= f.label :caption %><br>
      <%= f.text_field :caption %>
    </div>
    <div class="field">
      <%= f.file_field :postimage %>
    </div>
    <%= f.hidden_field :channel_id, value: @channel.id %>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>

<% @post = Post.new %>
  <%= form_for(@post, :url => posts_path, :html => { :multipart => true }) do |f| %>
    <div id="add-image-caption">
      <%= f.text_field :caption, placeholder: "Caption" %>
    </div>
    <div id="add-image-upload">
      <%= f.file_field :postimage %>
    </div>
    <%= f.hidden_field :channel_id, value: @channel.id %>
    <div id="add-image-submit">
      <%= f.submit %>
    </div>
  <% end %>

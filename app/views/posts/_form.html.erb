<div class="new-post">
  MAKE NEW POST:

  <%= form_for Post.new do |f| %>

    <div class="field">
      <%= f.label :img_url %><br>
      <%= f.text_field :img_url %>
    </div>
    <div class="field">
      <%= f.label :caption %><br>
      <%= f.text_field :caption %>
    </div>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :channel_id, value: @channel.id %>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>